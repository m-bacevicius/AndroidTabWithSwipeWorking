<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/testTextView" />

    <Button
        android:text="See realtime data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goFurther"
        android:layout_below="@+id/testTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToTest"
        android:layout_below="@+id/goFurther"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Test Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/goToTest"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Timer is running:"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/goToTest"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/textView2"
        android:layout_marginBottom="39dp" />

    <TextView
        android:text="TextView"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/someTextView1"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>